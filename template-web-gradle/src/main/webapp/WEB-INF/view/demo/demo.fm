<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>SpringMVC REST</title>
    <script src="/lib/jquery.min.js"></script>
    <script src="/js/jquery.rest.js"></script>
    <script src="/js/urls.js"></script>
</head>

<body>
    <div id="foo"></div>
    Welcome to ${action}
    <pre id="error">...</pre>

    <script>
        $(document).ready(function() {
            // 服务器端的 GET 需要启用 UTF-8 才不会乱吗
            $.rest.get({url: '/rest', data: {name: 'Alice'}, success: function(result) {
                console.log(result);
            }});

            $.rest.create({url: '/rest', success: function(result) {
                console.log(result);
            }});

            $.rest.update({url: '/rest', data: {name: '黄飞鸿', age: 22}, success: function(result) {
                console.log(result);
            }});

            $.rest.remove({url: '/rest', success: function(result) {
                console.log(result);
            }});

            $.rest.get({url: '/rest/{id}', urlParams: {id: 121}, data: {name: '黄彪'}, success: function(result) {
                console.log(result);
            }, fail: function(e) {
                console.log(e);
            }});

            // AJAX 请求时后端发生异常
            // $.rest.get({url: '/exception-ajax?id=123', success: function(result) {
            //     if (!result.success) {
            //         $('#error').html(result.message + '<br>' + result.data);
            //     }
            // }, fail: function(e) {
            //     console.log(e);
            // }});

            function __cas_account_loaded(data) {
                console.log('jsonp');
                console.log(data);
            }

            // JSON P
            $.ajax({
                url     : 'http://127.0.0.1:8080/jsonp-test',
                type    : 'GET',
                dataType: 'jsonp', // 表示要用 JSONP 进行跨域访问
                success : function(a, b, c) { // 随机生成回调函数名
                    console.log(a + ", " + b + ", " + c);
                }
            });

            // $.ajax({
            //     url     : "http://eplatform.edu-edu.com.cn/cas/web/logininfo/jsonp",
            //     type    : "GET",
            //     dataType: "jsonp", // 表示要用 JSONP 进行跨域访问
            //     jsonp   : "jsonpCallback",
            //     jsonpCallback: "__cas_account_loaded"
            // });



        });
    </script>
</body>
</html>
