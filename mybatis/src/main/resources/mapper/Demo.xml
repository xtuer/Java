<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC
        "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!--
CREATE TABLE `demo` (
    `id` int(11) unsigned NOT NULL AUTO_INCREMENT,
    `info` text,
    PRIMARY KEY (`id`)
) ENGINE=InnoDB AUTO_INCREMENT=1 DEFAULT CHARSET=utf8;
-->
<!--namespace 非常重要：必须是 Mapper 类的全路径-->
<mapper namespace="com.xtuer.mapper.DemoMapper">
    <!--列出文件和文件夹-->
    <select id="findDemoById" parameterType="int" resultType="Demo">
        SELECT id, info
        FROM demo
        WHERE id=#{id}
    </select>

    <select id="findDemosByInfo" parameterType="string" resultType="Demo">
        SELECT id, info
        FROM demo
        WHERE info=#{info}
    </select>

    <select id="hasDemo" resultType="boolean">
        SELECT count(*) FROM demo
    </select>
    <select id="demoCount" resultType="int">
        SELECT count(*) FROM demo
    </select>

    <insert id="insertDemo" parameterType="Demo" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO demo (info) VALUES (#{info})
    </insert>
</mapper>
