<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>套卷管理</title>
    <link rel="stylesheet" href="/lib/semantic/semantic.min.css">
    <link rel="stylesheet" href="/css/adminPapers.css">
</head>

<body>
    <!-- [1] 菜单栏 -->
    <div class="ui left vertical inverted visible sidebar labeled icon menu">
        <a class="item"><i class="home icon"></i>Home</a>
        <a class="item" href="/adminPapers"><i class="share alternate square icon"></i> 套卷管理</a>
        <a class="item" href="/adminKnowledgePoints"><i class="block layout icon"></i> 知识点管理</a>
    </div>

    <!-- [2] 目录树 -->
    <div class="directory-tree-side-bar">
        <ul id="directory-tree" class="ztree"></ul>
    </div>

    <!-- 目录树的右键菜单 -->
    <ul id="directory-tree-menu">
        <li id="menu-item-create">新建文件夹</li>
        <li id="menu-item-delete">删除文件夹</li>
        <li id="menu-item-rename">重命名</li>
    </ul>

    <!-- [3] 网页的主要部分 -->
    <div class="main ui">
        <!-- 工具栏 -->
        <div class="ui grid" id="tool-bar">
            <div class="ui column">
                <button class="ui labeled icon button" id="popupPapersDialogButton"><i class="icon plus"></i> 添加试卷</button>
            </div>
        </div>

        <!-- 文件列表 -->
        <div class="ui six column grid" id="vue-files">
            <div class="ui column" v-for="(file, index) in files" :data-id="file.fileId" :key="file.fileId">
                <div class="ui card">
                    <div class="image">
                        <img :src="file.image">
                    </div>
                    <div class="extra content">
                        <span v-text="file.name"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Dialogs -->
    <div id="papers-dialog">
        <div class="ui one column grid">
            <div class="ui column" style="display: flex;">
                <div class="ui icon input" style="flex: 1;">
                    <input type="text" placeholder="搜索...">
                    <i class="circular search link icon"></i>
                </div>
                <button class="circular ui icon button" style="margin-left: 1rem;"><i class="icon refresh"></i></button>
            </div>

            <div class="ui column">
                <div id="vue-segments">
                    <div class="ui segment" :class="segmentClass(index)" v-for="(item, index) in items">
                        <div class="ui checkbox">
                            <input type="checkbox" name="example">
                            <label v-html="item.text"></label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="/lib/require.js"></script>
    <script src="/js/requireConfig.js"></script>
    <script src="/js/adminPaperDirectories.js"></script>
    <script src="/js/adminPapers.js"></script>
</body>

</html>
